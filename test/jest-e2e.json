{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "^@prisma/(.*)$": "<rootDir>/../prisma/$1",
    "^@types/(.*)$": "<rootDir>/../types/$1",
    "^@utils/(.*)$": "<rootDir>/../utils/$1"
  }
}
